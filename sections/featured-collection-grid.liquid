/* Product Card - Figma Style Match */
.product-card {
  background: #E8E8E8;
  padding: 16px;
  border-radius: 32px;
  display: flex;
  flex-direction: column;
  width: 300px;
  min-width: 300px;
  flex-shrink: 0;
  scroll-snap-align: start;
  cursor: pointer;
  text-decoration: none;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
}

.product-card__image-wrapper {
  position: relative;
  width: 100%;
  height: 240px;
  background: #F5F5F5;
  overflow: hidden;
  flex-shrink: 0;
  border-radius: 24px;
  margin-bottom: 10px; /* REMOVED GAP - was 10px */
  z-index: 1;
}

.product-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-card__info {
  background: white;
  border-radius: 20px;
  padding: 14px 16px;
  box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 5px; /* Space between title and bottom row */
  z-index: 0;
}

.product-card__title {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: -0.01em;
  margin: 0;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-card__footer {
  display: flex;
  align-items: center; /* Vertically center subtitle and price */
  justify-content: space-between; /* Subtitle left, price right */
  gap: 12px;
}

.product-card__subtitle {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 13px;
  font-weight: 400;
  color: #888;
  margin: 0;
  flex-shrink: 0; /* Prevent shrinking */
}

.product-card__price {
  background: #ADADAD;
  color: white;
  padding: 8px 12px;
  border-radius: 20px;
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 13px;
  font-weight: 600;
  white-space: nowrap;
  text-align: center;
  flex-shrink: 0; /* Prevent shrinking */
}
.product-card__rotator-container {
  display: flex !important;
  align-items: center;
  justify-content: flex-start;
  gap: 5px; 
  height: 20px !important;
  max-height: 20px !important;
  overflow: hidden !important;
  position: relative;
  flex: 1;
}

.product-card__rotator-label {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 12px;
  color: #888; /* Grey color for "Perfect for" */
  white-space: nowrap;
  line-height: 20px;
}

/* The Moving List */
.product-card__rotator-window {
  display: flex;
  flex-direction: column;
  animation: slideWords 6s infinite ease-in-out;
  margin-top: 0; /* Reset margins */
}

/* The Individual Words */
.product-card__rotator-word {
  height: 20px !important;      /* Must match container height */
  display: flex;
  align-items: center;
  white-space: nowrap;
  color: #a14e4e; /* Your reddish accent color from the screenshot */
  font-weight: 500;
  font-size: 12px;
  line-height: 12px;
}

/* Animation Logic */
@keyframes slideWords {
  0%, 25% { transform: translateY(0px); }      /* Word 1 */
  33%, 58% { transform: translateY(-20px); }   /* Word 2 */
  66%, 91% { transform: translateY(-40px); }   /* Word 3 */
  100% { transform: translateY(0px); }         /* Back to start */
}


.product-card__buy-btn {
  background: #1a1a1a;
  color: white;
   padding: 8px 16px;
  border-radius: 20px;
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  border: none;
  text-decoration: none;
  display: inline-block;
}

.product-card__buy-btn:hover {
  background: #333;
  transform: scale(1.05);
}

