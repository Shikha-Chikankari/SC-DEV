{%- comment -%}
  Featured Collection Grid - Left: Feature Card, Right: Scrollable Window with Background
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --grid-gap: 24px;
    --card-radius: 24px;
  }

  .featured-collection-grid {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .featured-collection-grid__container {
    display: grid;
    grid-template-columns: 38% 1fr;
    gap: var(--grid-gap);
    align-items: start;
  }

  /* LEFT SIDE - Featured Collection Card (Vertical Portrait) */
  .featured-card {
    position: relative;
    border-radius: var(--card-radius);
    overflow: hidden;
    height: 750px;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: #f5f5f5;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .featured-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px 32px;
    background: linear-gradient(180deg, 
      rgba(0, 0, 0, 0) 0%, 
      rgba(0, 0, 0, 0.15) 30%,
      rgba(0, 0, 0, 0.5) 70%,
      rgba(0, 0, 0, 0.75) 100%
    );
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .featured-card__text {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 26px;
    font-weight: 600;
    color: #ffffff;
    line-height: 1.3;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .featured-card__arrow {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .featured-card:hover .featured-card__arrow {
    background: rgba(255, 255, 255, 0.35);
    transform: scale(1.08);
  }

  .featured-card__arrow svg {
    width: 18px;
    height: 18px;
    stroke: white;
    stroke-width: 2.5;
  }

  /* RIGHT SIDE - Background Window Container */
  .product-window {
    position: relative;
    border-radius: var(--card-radius);
    overflow: hidden;
    height: 750px;
    background: #e8f4f8;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
  }

  .product-window__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .product-window__content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 32px;
  }

  /* Horizontal Scrolling Product Cards Inside Window */
  .product-slider {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 8px;
    width: 100%;
    height: fit-content;
  }

  .product-slider::-webkit-scrollbar {
    height: 8px;
  }

  .product-slider::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    backdrop-filter: blur(10px);
  }

  .product-slider::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
  }

  .product-slider::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.5);
  }

  /* Product Card - Fixed 300x350 size */
  .product-card {
    background: white;
    border-radius: var(--card-radius);
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    width: 300px;
    height: 350px;
    flex-shrink: 0;
    scroll-snap-align: start;
  }

  .product-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 28px rgba(0, 0, 0, 0.16);
  }

  .product-card__image-wrapper {
    position: relative;
    width: 100%;
    height: 200px;
    background: #f5f5f5;
    overflow: hidden;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  .product-card__title {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 16px;
    font-weight: 700;
    color: #1a1a1a;
    letter-spacing: -0.01em;
    margin: 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .product-card__subtitle {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #666;
    margin: 0;
  }

  .product-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    gap: 8px;
  }

  .product-card__price {
    background: #e8e8e8;
    padding: 6px 14px;
    border-radius: 20px;
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: #1a1a1a;
    white-space: nowrap;
  }

  .product-card__buy-btn {
    background: #1a1a1a;
    color: white;
    border: none;
    padding: 8px 18px;
    border-radius: 20px;
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
    white-space: nowrap;
  }

  .product-card__buy-btn:hover {
    background: #333;
    transform: scale(1.05);
  }

  /* MOBILE RESPONSIVE */
  @media (max-width: 968px) {
    .featured-collection-grid__container {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .featured-card {
      height: 550px;
    }

    .product-window {
      height: auto;
      min-height: 400px;
    }

    .product-window__content {
      padding: 24px;
    }

    .product-card {
      width: 280px;
      height: 330px;
    }
  }

  @media (max-width: 768px) {
    .featured-card {
      height: 500px;
    }

    .featured-card__overlay {
      padding: 32px 24px;
    }

    .featured-card__text {
      font-size: 20px;
    }

    .featured-card__arrow {
      width: 32px;
      height: 32px;
    }

    .featured-card__arrow svg {
      width: 16px;
      height: 16px;
    }

    .product-card {
      width: 260px;
      height: 320px;
    }

    .product-window__content {
      padding: 20px;
    }
  }

  @media (max-width: 480px) {
    .featured-collection-grid {
      padding: 40px 16px;
    }

    .featured-card {
      height: 450px;
    }

    .featured-card__overlay {
      padding: 24px 20px;
    }

    .featured-card__text {
      font-size: 18px;
    }

    .product-card {
      width: 240px;
      height: 300px;
    }

    .product-card__image-wrapper {
      height: 180px;
    }

    .product-card__content {
      padding: 14px;
    }

    .product-window__content {
      padding: 16px;
    }
  }
{%- endstyle -%}

<div class="featured-collection-grid">
  <div class="featured-collection-grid__container">
    
    {%- comment -%} LEFT: Featured Collection Card {%- endcomment -%}
    {%- if section.settings.featured_collection != blank -%}
      <a href="{{ collections[section.settings.featured_collection].url }}" class="featured-card">
        {%- if section.settings.featured_image != blank -%}
          {{ section.settings.featured_image | image_url: width: 800 | image_tag: 
             loading: 'lazy',
             class: 'featured-card__image',
             alt: section.settings.featured_title
          }}
        {%- else -%}
          {{ 'collection-1' | placeholder_svg_tag: 'featured-card__image' }}
        {%- endif -%}
        
        <div class="featured-card__overlay">
          <h2 class="featured-card__text">{{ section.settings.featured_title }}</h2>
          <div class="featured-card__arrow">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </a>
    {%- endif -%}

    {%- comment -%} RIGHT: Product Window with Background {%- endcomment -%}
    <div class="product-window">
      {%- if section.settings.background_image != blank -%}
        {{ section.settings.background_image | image_url: width: 1200 | image_tag:
           loading: 'lazy',
           class: 'product-window__background',
           alt: 'Background'
        }}
      {%- endif -%}
      
      <div class="product-window__content">
        <div class="product-slider">
          {%- if section.settings.featured_collection != blank -%}
            {%- assign collection = collections[section.settings.featured_collection] -%}
            {%- for product in collection.products limit: 3 -%}
              <div class="product-card">
                <div class="product-card__image-wrapper">
                  {%- if product.featured_image -%}
                    {{ product.featured_image | image_url: width: 600 | image_tag:
                       loading: 'lazy',
                       class: 'product-card__image',
                       alt: product.title
                    }}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
                  {%- endif -%}
                </div>
                
                <div class="product-card__content">
                  <h3 class="product-card__title">{{ product.title }}</h3>
                  {%- if product.metafields.custom.subtitle != blank -%}
                    <p class="product-card__subtitle">{{ product.metafields.custom.subtitle }}</p>
                  {%- else -%}
                    <p class="product-card__subtitle">Perfect for Office</p>
                  {%- endif -%}
                  
                  <div class="product-card__footer">
                    <span class="product-card__price">
                      {{ product.price | money }}
                    </span>
                    <a href="/cart/{{ product.variants.first.id }}:1?redirect=/checkout" 
                       class="product-card__buy-btn">
                      Buy Now
                    </a>
                  </div>
                </div>
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Featured Collection Grid",
  "settings": [
    {
      "type": "header",
      "content": "Featured Collection (Left Card)"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Select Collection",
      "info": "Products from this collection will appear on the right side"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Card Image"
    },
    {
      "type": "text",
      "id": "featured_title",
      "label": "Overlay Text",
      "default": "Crafted for Workdays That Turn Heads"
    },
    {
      "type": "header",
      "content": "Product Window (Right Side)"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Background image for the product cards window"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection Grid"
    }
  ]
}
{% endschema %}
