{%- comment -%}
  Featured Collection Grid - Left: Feature Card, Right: Scrollable Window with Background
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --grid-gap: 24px;
    --card-radius: 24px;
    margin: 0;
    display: block;
  }

  .featured-collection-grid {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
    overflow: hidden;
  }

  .featured-collection-grid__container {
    display: grid;
    grid-template-columns: 38% 1fr;
    gap: var(--grid-gap);
    align-items: start;
    width: 100%;
    max-width: 100%;
  }

  /* LEFT SIDE - Featured Collection Card (Vertical Portrait) */
  .featured-card {
    position: relative;
    border-radius: var(--card-radius);
    overflow: hidden;
    height: 750px;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: #f5f5f5;
    width: 100%;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .featured-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-card__badge {
  position: absolute;
  top: 20px;
  left: 20px;
  background: rgba(255, 255, 255, 0.20); /* Changed from 0.95 to 0.75 */
  backdrop-filter: blur(12px); /* Increased blur for better readability */
  -webkit-backdrop-filter: blur(12px);
  padding: 8px 16px;
  border-radius: 24px;
  display: flex;
  align-items: center;
  gap: 6px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  z-index: 2;
}

  .featured-card__badge-icon {
    font-size: 16px;
  }

  .featured-card__badge-text {
  font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 14px;
  font-weight: 600;
  color: #1a1a1a; /* Dark text stays visible */
  letter-spacing: -0.01em;
}

  /* Bottom Overlay with Gradual Gradient */
  /* Bottom Overlay with Super Smooth Gradient - More Natural */
.featured-card__overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40px 32px;
  background: linear-gradient(to top, 
   rgba(0, 0, 0, 0.65) 0%, 
    rgba(0, 0, 0, 0.48) 15%,
    rgba(0, 0, 0, 0.32) 30%,
    rgba(0, 0, 0, 0.18) 45%,
    rgba(0, 0, 0, 0.08) 60%,
    rgba(0, 0, 0, 0.02) 75%,
    rgba(0, 0, 0, 0) 100%
  );
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  z-index: 1;
}

  .featured-card__text {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 26px;
    font-weight: 600;
    color: #ffffff;
    line-height: 1.3;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .featured-card__arrow {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .featured-card:hover .featured-card__arrow {
    background: rgba(255, 255, 255, 0.35);
    transform: scale(1.08);
  }

  .featured-card__arrow svg {
    width: 20px;
    height: 20px;
    stroke: white;
    stroke-width: 2.5;
  }

  /* RIGHT SIDE - Background Window Container */
  .product-window {
    position: relative;
    border-radius: var(--card-radius);
    overflow: hidden;
    height: 750px;
    background: #e8f4f8;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
    width: 100%;
    min-width: 0;
  }

  .product-window__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .product-window__content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 32px;
    overflow: hidden;
  }

  /* Horizontal Scrolling Product Cards Inside Window */
  .product-slider {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    padding: 8px 0;
    width: 100%;
    max-width: 100%;
  }

  .product-slider::-webkit-scrollbar {
    height: 8px;
  }

  .product-slider::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    backdrop-filter: blur(10px);
  }

  .product-slider::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
  }

  .product-slider::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.5);
  }

  /* Product Card - Figma Style Match */
