{%- comment -%}
  Featured Collection Grid - Left: Feature Card, Right: Vertical Scrolling Product Cards
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --grid-gap: 24px;
    --card-radius: 24px;
  }

  .featured-collection-grid {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .featured-collection-grid__container {
    display: grid;
    grid-template-columns: 38% 1fr;
    gap: var(--grid-gap);
    align-items: start;
  }

  /* LEFT SIDE - Featured Collection Card (Vertical Portrait) */
  .featured-card {
    position: relative;
    border-radius: var(--card-radius);
    overflow: hidden;
    height: 600px;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background: #f5f5f5;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .featured-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px 32px;
    background: linear-gradient(180deg, 
      rgba(0, 0, 0, 0) 0%, 
      rgba(0, 0, 0, 0.15) 30%,
      rgba(0, 0, 0, 0.5) 70%,
      rgba(0, 0, 0, 0.75) 100%
    );
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .featured-card__text {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 26px;
    font-weight: 600;
    color: #ffffff;
    line-height: 1.3;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .featured-card__arrow {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .featured-card:hover .featured-card__arrow {
    background: rgba(255, 255, 255, 0.35);
    transform: scale(1.08);
  }

  .featured-card__arrow svg {
    width: 18px;
    height: 18px;
    stroke: white;
    stroke-width: 2.5;
  }

  /* RIGHT SIDE - Vertical Scrolling Product Cards */
  .product-slider-wrapper {
    height: 250px;
    overflow: hidden;
  }

  .product-slider {
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    gap: var(--grid-gap);
    padding-right: 8px;
    scrollbar-width: thin;
    scrollbar-color: #ccc #f0f0f0;
  }

  .product-slider::-webkit-scrollbar {
    width: 6px;
  }

  .product-slider::-webkit-scrollbar-track {
    background: #f0f0f0;
    border-radius: 3px;
  }

  .product-slider::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 3px;
  }

  .product-slider::-webkit-scrollbar-thumb:hover {
    background: #999;
  }

  /* Vertical Product Card - Image Top, Content Bottom */
  .product-card {
    background: white;
    border-radius: var(--card-radius);
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .product-card__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* Square aspect ratio */
    background: #f5f5f5;
    overflow: hidden;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .product-card__title {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: #1a1a1a;
    letter-spacing: -0.01em;
    margin: 0;
    line-height: 1.3;
  }

  .product-card__subtitle {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 15px;
    font-weight: 400;
    color: #666;
    margin: 0;
  }

  .product-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 8px;
    gap: 12px;
  }

  .product-card__price {
    background: #e8e8e8;
    padding: 10px 20px;
    border-radius: 24px;
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 17px;
    font-weight: 700;
    color: #1a1a1a;
  }

  .product-card__buy-btn {
    background: #1a1a1a;
    color: white;
    border: none;
    padding: 12px 28px;
    border-radius: 24px;
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-block;
  }

  .product-card__buy-btn:hover {
    background: #333;
    transform: scale(1.05);
  }

  /* MOBILE RESPONSIVE */
  @media (max-width: 968px) {
    .featured-collection-grid__container {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .featured-card {
      height: 550px;
    }

    .product-slider-wrapper {
      height: auto;
    }

    .product-slider {
      height: auto;
      flex-direction: row;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-right: 0;
      padding-bottom: 12px;
    }

    .product-card {
      min-width: 320px;
      scroll-snap-align: start;
    }
  }

  @media (max-width: 768px) {
    .featured-card {
      height: 500px;
    }

    .featured-card__overlay {
      padding: 32px 24px;
    }

    .featured-card__text {
      font-size: 20px;
    }

    .featured-card__arrow {
      width: 32px;
      height: 32px;
    }

    .featured-card__arrow svg {
      width: 16px;
      height: 16px;
    }

    .product-card {
      min-width: 280px;
    }
  }

  @media (max-width: 480px) {
    .featured-collection-grid {
      padding: 40px 16px;
    }

    .featured-card {
      height: 450px;
    }

    .featured-card__overlay {
      padding: 24px 20px;
    }

    .featured-card__text {
      font-size: 18px;
    }

    .product-card {
      min-width: 260px;
    }

    .product-card__content {
      padding: 20px;
    }
  }
{%- endstyle -%}

<div class="featured-collection-grid">
  <div class="featured-collection-grid__container">
    
    {%- comment -%} LEFT: Featured Collection Card {%- endcomment -%}
    {%- if section.settings.featured_collection != blank -%}
      <a href="{{ collections[section.settings.featured_collection].url }}" class="featured-card">
        {%- if section.settings.featured_image != blank -%}
          {{ section.settings.featured_image | image_url: width: 800 | image_tag: 
             loading: 'lazy',
             class: 'featured-card__image',
             alt: section.settings.featured_title
          }}
        {%- else -%}
          {{ 'collection-1' | placeholder_svg_tag: 'featured-card__image' }}
        {%- endif -%}
        
        <div class="featured-card__overlay">
          <h2 class="featured-card__text">{{ section.settings.featured_title }}</h2>
          <div class="featured-card__arrow">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
      </a>
    {%- endif -%}

    {%- comment -%} RIGHT: Vertical Scrolling Product Cards {%- endcomment -%}
    <div class="product-slider-wrapper">
      <div class="product-slider">
        {%- if section.settings.featured_collection != blank -%}
          {%- assign collection = collections[section.settings.featured_collection] -%}
          {%- for product in collection.products limit: 3 -%}
            <div class="product-card">
              <div class="product-card__image-wrapper">
                {%- if product.featured_image -%}
                  {{ product.featured_image | image_url: width: 600 | image_tag:
                     loading: 'lazy',
                     class: 'product-card__image',
                     alt: product.title
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
                {%- endif -%}
              </div>
              
              <div class="product-card__content">
                <h3 class="product-card__title">{{ product.title }}</h3>
                {%- if product.metafields.custom.subtitle != blank -%}
                  <p class="product-card__subtitle">{{ product.metafields.custom.subtitle }}</p>
                {%- else -%}
                  <p class="product-card__subtitle">Perfect for Office</p>
                {%- endif -%}
                
                <div class="product-card__footer">
                  <span class="product-card__price">
                    {{ product.price | money }}
                  </span>
                  <a href="/cart/{{ product.variants.first.id }}:1?redirect=/checkout" 
                     class="product-card__buy-btn">
                    Buy Now
                  </a>
                </div>
              </div>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Featured Collection Grid",
  "settings": [
    {
      "type": "header",
      "content": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Select Collection",
      "info": "Products from this collection will appear on the right side"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image (Left Card)"
    },
    {
      "type": "text",
      "id": "featured_title",
      "label": "Overlay Text",
      "default": "Crafted for Workdays That Turn Heads"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection Grid"
    }
  ]
}
{% endschema %}
