{%- comment -%}
  About Us Page - Complete Template
  Hero + Brand Promise + Founder Section
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    margin: 0;
    padding: 0;
  }

  /* Hero Section */
  .about-hero {
    max-width: 1400px;
    margin: 0 auto;
    padding: 80px 40px 60px;
    text-align: center;
  }

  .about-hero__title {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 56px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 20px 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .about-hero__subtitle {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 18px;
    font-weight: 400;
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  /* Brand Promise Section */
  .brand-promise {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 40px 80px;
  }

  .brand-promise__heading {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 36px;
    font-weight: 700;
    color: #1a1a1a;
    text-align: center;
    margin: 0 0 60px 0;
  }

  .brand-promise__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    position: relative;
  }

  /* Dotted Lines Connector */
  .brand-promise__connector {
    position: absolute;
    top: 50%;
    left: 10%;
    right: 10%;
    height: 2px;
    background-image: repeating-linear-gradient(
      to right,
      #333 0,
      #333 10px,
      transparent 10px,
      transparent 20px
    );
    z-index: 0;
    pointer-events: none;
  }

  .brand-promise__card {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .brand-promise__image-wrapper {
    width: 100%;
    height: 280px;
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 30px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .brand-promise__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .brand-promise__icon-box {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .brand-promise__icon {
    width: 40px;
    height: 40px;
  }

  .brand-promise__card-title {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0;
  }

  .brand-promise__card-description {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 15px;
    font-weight: 400;
    color: #666;
    margin: 8px 0 0 0;
    line-height: 1.5;
  }

  /* Founder Section */
  .founder-section {
    max-width: 900px;
    margin: 0 auto;
    padding: 80px 40px 100px;
    text-align: center;
  }

  .founder-section__signature {
    font-family: 'Brush Script MT', cursive;
    font-size: 48px;
    color: #1a1a1a;
    margin: 0 0 30px 0;
  }

  .founder-section__heading {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 42px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 30px 0;
    line-height: 1.3;
  }

  .founder-section__quote {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 50px 0;
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .founder-section__image-wrapper {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .founder-section__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Mobile Responsive */
  @media (max-width: 968px) {
    .about-hero {
      padding: 60px 24px 40px;
    }

    .about-hero__title {
      font-size: 36px;
    }

    .about-hero__subtitle {
      font-size: 16px;
    }

    .brand-promise {
      padding: 40px 24px 60px;
    }

    .brand-promise__heading {
      font-size: 28px;
      margin-bottom: 40px;
    }

    .brand-promise__grid {
      grid-template-columns: 1fr;
      gap: 50px;
    }

    .brand-promise__connector {
      display: none;
    }

    .brand-promise__image-wrapper {
      height: 240px;
    }

    .founder-section {
      padding: 60px 24px 80px;
    }

    .founder-section__signature {
      font-size: 36px;
    }

    .founder-section__heading {
      font-size: 32px;
    }

    .founder-section__quote {
      font-size: 16px;
    }

    .founder-section__image-wrapper {
      width: 200px;
      height: 200px;
    }
  }

  @media (max-width: 640px) {
    .about-hero {
      padding: 40px 16px 30px;
    }

    .about-hero__title {
      font-size: 28px;
    }

    .about-hero__subtitle {
      font-size: 15px;
    }

    .brand-promise {
      padding: 30px 16px 40px;
    }

    .brand-promise__heading {
      font-size: 24px;
    }

    .brand-promise__card-title {
      font-size: 18px;
    }

    .brand-promise__card-description {
      font-size: 14px;
    }

    .founder-section {
      padding: 40px 16px 60px;
    }

    .founder-section__signature {
      font-size: 32px;
    }

    .founder-section__heading {
      font-size: 26px;
    }

    .founder-section__quote {
      font-size: 15px;
    }
  }
{%- endstyle -%}

<div class="about-us-page">
  {%- comment -%} Hero Section {%- endcomment -%}
  <section class="about-hero">
    <h1 class="about-hero__title">{{ section.settings.hero_title }}</h1>
    <p class="about-hero__subtitle">{{ section.settings.hero_subtitle }}</p>
  </section>

  {%- comment -%} Brand Promise Section {%- endcomment -%}
  <section class="brand-promise">
    <h2 class="brand-promise__heading">{{ section.settings.promise_heading }}</h2>
    
    <div class="brand-promise__grid">
      <div class="brand-promise__connector"></div>
      
      {%- comment -%} Card 1 {%- endcomment -%}
      <div class="brand-promise__card">
        <div class="brand-promise__image-wrapper">
          {%- if section.settings.card1_image != blank -%}
            {{ section.settings.card1_image | image_url: width: 600 | image_tag:
               loading: 'lazy',
               class: 'brand-promise__image',
               alt: section.settings.card1_title
            }}
          {%- endif -%}
        </div>
        <div class="brand-promise__icon-box">
          {%- if section.settings.card1_icon != blank -%}
            {{ section.settings.card1_icon | image_url: width: 80 | image_tag:
               class: 'brand-promise__icon',
               alt: section.settings.card1_title
            }}
          {%- endif -%}
          <h3 class="brand-promise__card-title">{{ section.settings.card1_title }}</h3>
        </div>
        <p class="brand-promise__card-description">{{ section.settings.card1_description }}</p>
      </div>

      {%- comment -%} Card 2 {%- endcomment -%}
      <div class="brand-promise__card">
        <div class="brand-promise__image-wrapper">
          {%- if section.settings.card2_image != blank -%}
            {{ section.settings.card2_image | image_url: width: 600 | image_tag:
               loading: 'lazy',
               class: 'brand-promise__image',
               alt: section.settings.card2_title
            }}
          {%- endif -%}
        </div>
        <div class="brand-promise__icon-box">
          {%- if section.settings.card2_icon != blank -%}
            {{ section.settings.card2_icon | image_url: width: 80 | image_tag:
               class: 'brand-promise__icon',
               alt: section.settings.card2_title
            }}
          {%- endif -%}
          <h3 class="brand-promise__card-title">{{ section.settings.card2_title }}</h3>
        </div>
        <p class="brand-promise__card-description">{{ section.settings.card2_description }}</p>
      </div>

      {%- comment -%} Card 3 {%- endcomment -%}
      <div class="brand-promise__card">
        <div class="brand-promise__image-wrapper">
          {%- if section.settings.card3_image != blank -%}
            {{ section.settings.card3_image | image_url: width: 600 | image_tag:
               loading: 'lazy',
               class: 'brand-promise__image',
               alt: section.settings.card3_title
            }}
          {%- endif -%}
        </div>
        <div class="brand-promise__icon-box">
          {%- if section.settings.card3_icon != blank -%}
            {{ section.settings.card3_icon | image_url: width: 80 | image_tag:
               class: 'brand-promise__icon',
               alt: section.settings.card3_title
            }}
          {%- endif -%}
          <h3 class="brand-promise__card-title">{{ section.settings.card3_title }}</h3>
        </div>
        <p class="brand-promise__card-description">{{ section.settings.card3_description }}</p>
      </div>
    </div>
  </section>

  {%- comment -%} Founder Section {%- endcomment -%}
  <section class="founder-section">
    {%- if section.settings.founder_signature != blank -%}
      <div class="founder-section__signature">{{ section.settings.founder_signature }}</div>
    {%- endif -%}
    
    <h2 class="founder-section__heading">{{ section.settings.founder_heading }}</h2>
    
    {%- if section.settings.founder_quote != blank -%}
      <p class="founder-section__quote">"{{ section.settings.founder_quote }}"</p>
    {%- endif -%}
    
    {%- if section.settings.founder_image != blank -%}
      <div class="founder-section__image-wrapper">
        {{ section.settings.founder_image | image_url: width: 500 | image_tag:
           loading: 'lazy',
           class: 'founder-section__image',
           alt: 'Founder'
        }}
      </div>
    {%- endif -%}
  </section>
</div>

