{%- comment -%}
  Bento Grid - Modern asymmetric grid layout
  8 boxes total with customizable images, text, and links
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    margin: 0;
    padding: 60px 20px;
    display: block;
  }

  .bento-grid {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto auto auto;
    gap: 20px;
  }

  /* Grid Layout Structure */
  .bento-box:nth-child(1) { grid-column: 1 / 2; grid-row: 1; }
  .bento-box:nth-child(2) { grid-column: 2 / 3; grid-row: 1; }
  .bento-box:nth-child(3) { grid-column: 3 / 4; grid-row: 1; }
  .bento-box:nth-child(4) { grid-column: 4 / 5; grid-row: 1; }
  
  .bento-box:nth-child(5) { grid-column: 1 / 2; grid-row: 2 / 4; } /* Tall box */
  .bento-box:nth-child(6) { grid-column: 2 / 3; grid-row: 2; }
  .bento-box:nth-child(7) { grid-column: 3 / 5; grid-row: 2; } /* Wide box */
  
  .bento-box:nth-child(8) { grid-column: 2 / 4; grid-row: 3; } /* Wide box */
  .bento-box:nth-child(9) { grid-column: 4 / 5; grid-row: 3; }

  /* Box Base Styles */
  .bento-box {
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    background: #f5f5f5;
    min-height: 200px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: default;
  }

  .bento-box--clickable {
    cursor: pointer;
  }

  .bento-box--clickable:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  /* Image Container */
  .bento-box__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .bento-box__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Video Container */
.bento-box__video-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.bento-box__video-wrapper iframe,
.bento-box__video-wrapper video {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%, -50%);
  object-fit: cover;
  pointer-events: none;
}

  /* Overlay for text readability */
  .bento-box__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.5) 100%
    );
    z-index: 1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .bento-box:hover .bento-box__overlay {
    opacity: 1;
  }

  /* Text Content */
  .bento-box__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .bento-box__title {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 20px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .bento-box--dark .bento-box__title {
    color: #ffffff;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .bento-box__subtitle {
    font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #666;
    margin: 0;
    line-height: 1.4;
  }

  .bento-box--dark .bento-box__subtitle {
    color: rgba(255, 255, 255, 0.9);
  }

  /* Button Style Box */
  .bento-box--button {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e07856;
    cursor: pointer;
    min-height: 120px;
  }

  .bento-box--button:hover {
    background: #d66b45;
  }

  .bento-box--button .bento-box__title {
    color: white;
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: center;
    margin: 0;
  }

  /* Centered Text Box */
  .bento-box--centered {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .bento-box--centered .bento-box__content {
    position: relative;
    padding: 32px;
  }

  /* Mobile Responsive */
@media (max-width: 968px) {
  .bento-grid {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: auto;
    gap: 16px;
  }

  /* Mobile Layout Order */
  .bento-box:nth-child(1) { grid-column: 1 / 3; grid-row: 1; } /* Box 1 - Full width */
  .bento-box:nth-child(2) { grid-column: 1 / 3; grid-row: 2; } /* Box 2 - Full width */
  .bento-box:nth-child(3) { grid-column: 1 / 2; grid-row: 3; } /* Box 3 - Left button */
  .bento-box:nth-child(4) { grid-column: 2 / 3; grid-row: 3; } /* Box 4 - Right button */
  .bento-box:nth-child(5) { grid-column: 1 / 3; grid-row: 4; min-height: 400px; } /* Box 5 - Tall full width */
  .bento-box:nth-child(6) { grid-column: 1 / 2; grid-row: 5; } /* Box 6 - Left */
  .bento-box:nth-child(7) { grid-column: 1 / 3; grid-row: 7; } /* Box 7 - Full width at bottom */
  .bento-box:nth-child(8) { grid-column: 1 / 3; grid-row: 6; } /* Box 8 - Full width */
  .bento-box:nth-child(9) { grid-column: 2 / 3; grid-row: 5; } /* Box 9 - Right */

  .bento-box {
    min-height: 180px;
  }
}

@media (max-width: 640px) {
  #shopify-section-{{ section.id }} {
    padding: 40px 16px;
  }

  .bento-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  /* Mobile Layout - Keep same structure */
  .bento-box:nth-child(1) { grid-column: 1 / 3; grid-row: 1; min-height: 240px; }
  .bento-box:nth-child(2) { grid-column: 1 / 3; grid-row: 2; min-height: 240px; }
  .bento-box:nth-child(3) { grid-column: 1 / 2; grid-row: 3; min-height: 120px; }
  .bento-box:nth-child(4) { grid-column: 2 / 3; grid-row: 3; min-height: 120px; }
  .bento-box:nth-child(5) { grid-column: 1 / 3; grid-row: 4; min-height: 350px; }
  .bento-box:nth-child(6) { grid-column: 1 / 2; grid-row: 5; min-height: 220px; }
  .bento-box:nth-child(7) { grid-column: 1 / 3; grid-row: 7; min-height: 240px; }
  .bento-box:nth-child(8) { grid-column: 1 / 3; grid-row: 6; min-height: 200px; }
  .bento-box:nth-child(9) { grid-column: 2 / 3; grid-row: 5; min-height: 220px; }

  .bento-box {
    border-radius: 20px;
  }

  .bento-box__content {
    padding: 20px;
  }

  .bento-box__title {
    font-size: 18px;
  }

  .bento-box__subtitle {
    font-size: 13px;
  }

  .bento-box--button {
    min-height: 100px;
  }

  .bento-box--button .bento-box__title {
    font-size: 14px;
    padding: 0 8px;
  }
}

