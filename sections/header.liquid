@media (max-width: 749px) {
  /* Use flex instead of the theme's 5-cell grid */
  .header .header__columns {
    position: relative;
    display: flex !important;
    align-items: center;
    gap: 10px;                       /* space between left icon and right cluster */
    padding-inline: 12px;
    /* neutralize the grid the theme sets */
    grid-template-areas: unset !important;
    grid-template-columns: unset !important;
  }

  /* Cancel any grid placement from earlier overrides */
  .header .menu-drawer__button,
  .header .search-action,
  header-actions,
  .header .header-logo { grid-area: auto !important; }

  /* PERFECTLY center the logo regardless of right/left widths */
  .header .header-logo {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%); /* exact center */
    justify-self: center !important;
  }

