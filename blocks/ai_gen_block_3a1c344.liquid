{% doc %}
  @prompt
    Display 2 or 3 visually balanced banners instead of text boxes:
    
    Left: New Drop / Festive Edit
    
    Center: Best Seller â€” Top Rated Kurti
    
    Right: Discount / Offer zone
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap_mobile }}px;
    }
  }

  .ai-banner-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    display: block;
    text-decoration: none;
  }

  .ai-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-banner-item-{{ ai_gen_id }}:hover .ai-banner-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-banner-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 8px;
    line-height: 1.2;
  }

  .ai-banner-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 400;
    margin: 0;
    line-height: 1.3;
  }

  @media screen and (max-width: 749px) {
    .ai-banner-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.8 }}px;
    }

    .ai-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-banner-overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-banner-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <a
    href="{{ block.settings.banner_1_link }}"
    class="ai-banner-item-{{ ai_gen_id }}"
    {% if block.settings.banner_1_link == blank %}aria-disabled="true"{% endif %}
  >
    {% if block.settings.banner_1_image %}
      <img
        src="{{ block.settings.banner_1_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_1_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_1_image.width }}"
        height="{{ block.settings.banner_1_image.height }}"
        class="ai-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
    <div class="ai-banner-overlay-{{ ai_gen_id }}">
      {% if block.settings.banner_1_label != blank %}
        <div class="ai-banner-label-{{ ai_gen_id }}">{{ block.settings.banner_1_label }}</div>
      {% endif %}
      {% if block.settings.banner_1_title != blank %}
        <h3 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_1_title }}</h3>
      {% endif %}
    </div>
  </a>

  <a
    href="{{ block.settings.banner_2_link }}"
    class="ai-banner-item-{{ ai_gen_id }}"
    {% if block.settings.banner_2_link == blank %}aria-disabled="true"{% endif %}
  >
    {% if block.settings.banner_2_image %}
      <img
        src="{{ block.settings.banner_2_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_2_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_2_image.width }}"
        height="{{ block.settings.banner_2_image.height }}"
        class="ai-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
    <div class="ai-banner-overlay-{{ ai_gen_id }}">
      {% if block.settings.banner_2_label != blank %}
        <div class="ai-banner-label-{{ ai_gen_id }}">{{ block.settings.banner_2_label }}</div>
      {% endif %}
      {% if block.settings.banner_2_title != blank %}
        <h3 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_2_title }}</h3>
      {% endif %}
    </div>
  </a>

  <a
    href="{{ block.settings.banner_3_link }}"
    class="ai-banner-item-{{ ai_gen_id }}"
    {% if block.settings.banner_3_link == blank %}aria-disabled="true"{% endif %}
  >
    {% if block.settings.banner_3_image %}
      <img
        src="{{ block.settings.banner_3_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_3_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_3_image.width }}"
        height="{{ block.settings.banner_3_image.height }}"
        class="ai-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'collection-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
    <div class="ai-banner-overlay-{{ ai_gen_id }}">
      {% if block.settings.banner_3_label != blank %}
        <div class="ai-banner-label-{{ ai_gen_id }}">{{ block.settings.banner_3_label }}</div>
      {% endif %}
      {% if block.settings.banner_3_title != blank %}
        <h3 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_3_title }}</h3>
      {% endif %}
    </div>
  </a>
</div>

