{% doc %}
  @prompt
    Create a clean, minimal text section that displays a centered heading above my collection grid. The heading should say “Shop by Category” in bold typography, aligned in the center. The section should have adjustable padding (top and bottom), and the text color should adapt automatically to the theme color scheme (light/dark). The font size should be around 28–32px on desktop and scale down on mobile. Add spacing below the text to separate it visually from the collections., give the Alignment for center and left of the section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-heading-{{ ai_gen_id }} {
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-category-heading__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size_desktop }}px;
    font-weight: 700;
    color: rgb(var(--color-foreground-heading));
    margin-bottom: {{ block.settings.spacing_below }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-category-heading__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }
  }
{% endstyle %}

<div
  class="ai-category-heading-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}"
  {{ block.shopify_attributes }}
>
  <h2 class="ai-category-heading__title-{{ ai_gen_id }}">
    {{ block.settings.heading_text }}
  </h2>
</div>

{% schema %}
{
  "name": "Category heading",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading text",
      "default": "Shop by Category"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Desktop font size",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 16,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Mobile font size",
      "default": 24
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_below",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Spacing below heading",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Category heading"
    }
  ]
}
{% endschema %}
