{% doc %}
  @prompt
    simple text section, i can change it, and add animation to it
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-animated-text-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-animated-text__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    opacity: 0;
  }

  {% if block.settings.animation_type == 'fade_in' %}
    @keyframes ai-fade-in-{{ ai_gen_id }} {
      from {
        opacity: 0;
        transform: translateY({{ block.settings.fade_distance }}px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .ai-animated-text__content-{{ ai_gen_id }}.ai-animated {
      animation: ai-fade-in-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-out forwards;
      animation-delay: {{ block.settings.animation_delay }}s;
    }
  {% elsif block.settings.animation_type == 'slide_in' %}
    @keyframes ai-slide-in-{{ ai_gen_id }} {
      from {
        opacity: 0;
        transform: translateX({{ block.settings.slide_distance }}px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .ai-animated-text__content-{{ ai_gen_id }}.ai-animated {
      animation: ai-slide-in-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-out forwards;
      animation-delay: {{ block.settings.animation_delay }}s;
    }
  {% elsif block.settings.animation_type == 'scale_in' %}
    @keyframes ai-scale-in-{{ ai_gen_id }} {
      from {
        opacity: 0;
        transform: scale({{ block.settings.scale_start }});
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    .ai-animated-text__content-{{ ai_gen_id }}.ai-animated {
      animation: ai-scale-in-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-out forwards;
      animation-delay: {{ block.settings.animation_delay }}s;
    }
  {% elsif block.settings.animation_type == 'none' %}
    .ai-animated-text__content-{{ ai_gen_id }}.ai-animated {
      opacity: 1;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-animated-text-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-animated-text__content-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.font_size }}px * 0.8);
    }
  }
{% endstyle %}

<animated-text-{{ ai_gen_id }}
  class="ai-animated-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-animated-text__content-{{ ai_gen_id }}">
    {{ block.settings.text_content }}
  </div>
</animated-text-{{ ai_gen_id }}>

<script>
  (function() {
    class AnimatedText{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.textElement = this.querySelector('.ai-animated-text__content-{{ ai_gen_id }}');
        this.hasAnimated = false;
      }

      connectedCallback() {
        if (this.textElement) {
          {% if block.settings.trigger_type == 'on_load' %}
            this.animateText();
          {% elsif block.settings.trigger_type == 'on_scroll' %}
            this.setupScrollObserver();
          {% endif %}
        }
      }

      animateText() {
        if (!this.hasAnimated) {
          this.textElement.classList.add('ai-animated');
          this.hasAnimated = true;
        }
      }

      setupScrollObserver() {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting && !this.hasAnimated) {
                this.animateText();
                observer.unobserve(this);
              }
            });
          },
          {
            threshold: 0.2
          }
        );

        observer.observe(this);
      }
    }

    customElements.define('animated-text-{{ ai_gen_id }}', AnimatedText{{ ai_gen_id }});
  })();
</script>

