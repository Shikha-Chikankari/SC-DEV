    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-feature-collection-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: 40px;
  }

  .ai-feature-collection-title-{{ ai_gen_id }} {
