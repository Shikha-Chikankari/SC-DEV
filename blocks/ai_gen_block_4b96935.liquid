    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: 600;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-feature-collection-products-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
    padding-bottom: 20px;
  }

  .ai-feature-collection-products-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-feature-collection-products-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-feature-collection-products-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
