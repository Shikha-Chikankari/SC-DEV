<feature-collection-{{ ai_gen_id }} class="ai-feature-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-feature-collection-container-{{ ai_gen_id }}">
    {% if block.settings.section_background_type == 'image' and block.settings.section_background_image %}
      <div class="ai-feature-collection-background-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.section_background_image | image_url: width: 2000 }}"
          alt="{{ block.settings.section_background_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.section_background_image.width }}"
          height="{{ block.settings.section_background_image.height }}"
        >
      </div>
    {% elsif block.settings.section_background_type == 'video' and block.settings.section_background_video %}
      <div class="ai-feature-collection-background-{{ ai_gen_id }}">
        <video
          autoplay
          loop
          muted
          playsinline
          src="{{ block.settings.section_background_video | file_url }}"
        ></video>
      </div>
    {% endif %}

    {% if block.settings.show_section_overlay %}
      <div class="ai-feature-collection-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-feature-collection-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <div class="ai-feature-collection-header-{{ ai_gen_id }}">
          <h2 class="ai-feature-collection-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        </div>
      {% endif %}

      {% if block.settings.collection != blank %}
        <div class="ai-feature-collection-products-{{ ai_gen_id }}">
          {% for product in block.settings.collection.products limit: block.settings.products_limit %}
            <a href="{{ product.url }}" class="ai-feature-collection-card-{{ ai_gen_id }}">
              {% if block.settings.card_background_type == 'image' and block.settings.card_background_image %}
                <div class="ai-feature-collection-card-background-{{ ai_gen_id }}">
                  <img
                    src="{{ block.settings.card_background_image | image_url: width: 800 }}"
                    alt="{{ block.settings.card_background_image.alt | escape }}"
                    loading="lazy"
                  >
                </div>
              {% elsif block.settings.card_background_type == 'video' and block.settings.card_background_video %}
                <div class="ai-feature-collection-card-background-{{ ai_gen_id }}">
                  <video
                    autoplay
                    loop
                    muted
                    playsinline
                    src="{{ block.settings.card_background_video | file_url }}"
                  ></video>
                </div>
              {% endif %}

              {% if block.settings.show_card_overlay %}
                <div class="ai-feature-collection-card-overlay-{{ ai_gen_id }}"></div>
              {% endif %}

              <div class="ai-feature-collection-card-content-{{ ai_gen_id }}">
                <div class="ai-feature-collection-card-image-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="600"
                      height="750"
                    >
                  {% else %}
                    <div style="width: 100%; height: 100%; background: #f5f5f5;"></div>
                  {% endif %}
                </div>

                <div class="ai-feature-collection-card-info-{{ ai_gen_id }}">
                  <h3 class="ai-feature-collection-card-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                  <div class="ai-feature-collection-card-pricing-{{ ai_gen_id }}">
                    <div class="ai-feature-collection-price-row-{{ ai_gen_id }}">
                      <span class="ai-feature-collection-price-{{ ai_gen_id }}">
                        {{ product.price | money }}
                      </span>

                      {% if product.compare_at_price > product.price %}
                        <span class="ai-feature-collection-compare-price-{{ ai_gen_id }}">
                          {{ product.compare_at_price | money }}
                        </span>

                        {% if block.settings.show_discount_badge %}
                          {% assign discount_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                          <span class="ai-feature-collection-discount-badge-{{ ai_gen_id }}">
                            -{{ discount_percent }}%
                          </span>
                        {% endif %}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </a>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-feature-collection-empty-{{ ai_gen_id }}">
          Select a collection to display products
        </div>
      {% endif %}
    </div>
  </div>
</feature-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeatureCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.productsContainer = this.querySelector('.ai-feature-collection-products-{{ ai_gen_id }}');
        
        if (this.productsContainer) {
          this.setupScrollAnimation();
        }
      }

      setupScrollAnimation() {
        const cards = this.productsContainer.querySelectorAll('.ai-feature-collection-card-{{ ai_gen_id }}');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              setTimeout(() => {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateX(0)';
              }, index * 100);
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.1
        });

        cards.forEach((card, index) => {
          card.style.opacity = '0';
          card.style.transform = 'translateX(30px)';
          card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
          observer.observe(card);
        });
      }
    }

    customElements.define('feature-collection-{{ ai_gen_id }}', FeatureCollection{{ ai_gen_id }});
  })();
</script>

