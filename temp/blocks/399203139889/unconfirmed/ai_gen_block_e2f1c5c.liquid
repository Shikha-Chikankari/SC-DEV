{% doc %}
  @prompt
    add a mood based shopping corousel, has different mood of shopping, enable the option to add the background image and video both and make the mood section modern card like style, in mood shopping corousel section only, the mood shopping carousel should also contain option of background with image and video.
    each mood should directs to the collection
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mood-carousel-{{ ai_gen_id }} {
    width: 100%;
    position: relative;
    display: block;
    overflow: hidden;
  }

  .ai-mood-carousel-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ai-mood-carousel-bg-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mood-carousel-bg-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mood-carousel-bg-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.section_bg_overlay_opacity }});
  }

  .ai-mood-carousel-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-mood-carousel-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-mood-carousel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    text-transform: uppercase;
  }

  .ai-mood-carousel-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-mood-carousel-container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-mood-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    transition: transform 0.5s ease;
  }

  .ai-mood-card-{{ ai_gen_id }} {
    flex: 0 0 calc({{ block.settings.cards_per_view }} - {{ block.settings.card_gap }}px);
    min-width: 280px;
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity }});
  }

  .ai-mood-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | plus: 0.1 }});
  }

  .ai-mood-card-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-mood-card-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.card_height }}px;
    overflow: hidden;
  }

  .ai-mood-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-mood-card-{{ ai_gen_id }}:hover .ai-mood-card-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-mood-card-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mood-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, {{ block.settings.overlay_opacity }}) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-mood-card-mood-{{ ai_gen_id }} {
    font-size: {{ block.settings.mood_text_size }}px;
    color: {{ block.settings.mood_text_color }};
    margin: 0 0 8px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-mood-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 16px;
    line-height: 1.4;
  }

  .ai-mood-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    text-align: center;
  }

  .ai-mood-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-mood-carousel-nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    margin-top: {{ block.settings.nav_spacing }}px;
  }

  .ai-mood-carousel-nav-button-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-mood-carousel-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
    color: {{ block.settings.nav_button_hover_color }};
    transform: scale(1.1);
  }

  .ai-mood-carousel-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-mood-carousel-nav-button-{{ ai_gen_id }}:disabled:hover {
    transform: scale(1);
  }

  .ai-mood-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-mood-carousel-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    padding: 0;
  }

  .ai-mood-carousel-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-mood-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-mood-empty-state-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-mood-card-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - {{ block.settings.card_gap }}px);
      min-width: 250px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-mood-carousel-content-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-mood-card-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - {{ block.settings.card_gap }}px);
      min-width: 280px;
    }

    .ai-mood-card-height-{{ ai_gen_id }} {
      height: 350px;
    }
  }
{% endstyle %}

<mood-carousel-{{ ai_gen_id }} class="ai-mood-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_bg_media_type == 'video' and block.settings.section_bg_video != blank %}
    <div class="ai-mood-carousel-background-{{ ai_gen_id }}">
      <video
        class="ai-mood-carousel-bg-video-{{ ai_gen_id }}"
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ block.settings.section_bg_video }}" type="video/mp4">
      </video>
      <div class="ai-mood-carousel-bg-overlay-{{ ai_gen_id }}"></div>
    </div>
  {% elsif block.settings.section_bg_image %}
    <div class="ai-mood-carousel-background-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.section_bg_image | image_url: width: 2000 }}"
        alt="{{ block.settings.section_title | escape }}"
        class="ai-mood-carousel-bg-image-{{ ai_gen_id }}"
        loading="lazy"
        width="2000"
        height="800"
      >
      <div class="ai-mood-carousel-bg-overlay-{{ ai_gen_id }}"></div>
    </div>
  {% endif %}

  <div class="ai-mood-carousel-content-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-mood-carousel-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-mood-carousel-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-mood-carousel-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-mood-carousel-container-{{ ai_gen_id }}">
      {% assign has_moods = false %}
      {% for i in (1..6) %}
        {% liquid
          assign mood_enabled_key = 'mood_' | append: i | append: '_enabled'
          assign mood_enabled = block.settings[mood_enabled_key]
          if mood_enabled
            assign has_moods = true
            break
          endif
        %}
      {% endfor %}

      {% if has_moods %}
        <div class="ai-mood-carousel-track-{{ ai_gen_id }}" data-track>
          {% for i in (1..6) %}
            {% liquid
              assign mood_enabled_key = 'mood_' | append: i | append: '_enabled'
              assign mood_name_key = 'mood_' | append: i | append: '_name'
              assign mood_desc_key = 'mood_' | append: i | append: '_description'
              assign mood_image_key = 'mood_' | append: i | append: '_image'
              assign mood_video_key = 'mood_' | append: i | append: '_video'
              assign mood_collection_key = 'mood_' | append: i | append: '_collection'
              assign mood_button_key = 'mood_' | append: i | append: '_button_text'
              assign media_type_key = 'mood_' | append: i | append: '_media_type'

              assign mood_enabled = block.settings[mood_enabled_key]
              assign mood_name = block.settings[mood_name_key]
              assign mood_desc = block.settings[mood_desc_key]
              assign mood_image = block.settings[mood_image_key]
              assign mood_video = block.settings[mood_video_key]
              assign mood_collection = block.settings[mood_collection_key]
              assign mood_button = block.settings[mood_button_key]
              assign media_type = block.settings[media_type_key]
            %}

            {% if mood_enabled %}
              <div class="ai-mood-card-{{ ai_gen_id }}">
                {% if mood_collection %}
                  <a href="{{ mood_collection.url }}" class="ai-mood-card-link-{{ ai_gen_id }}">
                {% endif %}
                  <div class="ai-mood-card-media-{{ ai_gen_id }}">
                    {% if media_type == 'video' and mood_video != blank %}
                      <video
                        class="ai-mood-card-video-{{ ai_gen_id }}"
                        autoplay
                        muted
                        loop
                        playsinline
                      >
                        <source src="{{ mood_video }}" type="video/mp4">
                      </video>
                    {% elsif mood_image %}
                      <img
                        src="{{ mood_image | image_url: width: 800 }}"
                        alt="{{ mood_name | escape }}"
                        class="ai-mood-card-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="800"
                        height="{{ block.settings.card_height }}"
                      >
                    {% else %}
                      <div class="ai-mood-card-image-{{ ai_gen_id }}" style="background-color: #f4f4f4; display: flex; align-items: center; justify-content: center;">
                        {{ 'lifestyle-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}

                    <div class="ai-mood-card-overlay-{{ ai_gen_id }}">
                      {% if mood_name != blank %}
                        <h3 class="ai-mood-card-mood-{{ ai_gen_id }}">{{ mood_name }}</h3>
                      {% endif %}
                      {% if mood_desc != blank %}
                        <p class="ai-mood-card-description-{{ ai_gen_id }}">{{ mood_desc }}</p>
                      {% endif %}
                      {% if mood_collection and mood_button != blank %}
                        <span class="ai-mood-card-button-{{ ai_gen_id }}">
                          {{ mood_button }}
                        </span>
                      {% endif %}
                    </div>
                  </div>
                {% if mood_collection %}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <div class="ai-mood-carousel-nav-{{ ai_gen_id }}">
          <button
            class="ai-mood-carousel-nav-button-{{ ai_gen_id }}"
            data-prev
            aria-label="Previous"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>

          <div class="ai-mood-carousel-dots-{{ ai_gen_id }}" data-dots></div>

          <button
            class="ai-mood-carousel-nav-button-{{ ai_gen_id }}"
            data-next
            aria-label="Next"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      {% else %}
        <div class="ai-mood-empty-state-{{ ai_gen_id }}">
          {{ 'lifestyle-1' | placeholder_svg_tag }}
          <p>Enable and configure mood cards to display your shopping carousel</p>
        </div>
      {% endif %}
    </div>
  </div>
</mood-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class MoodCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.cardsPerView = {{ block.settings.cards_per_view_number }};
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');

        if (!this.track) return;

        this.cards = Array.from(this.track.children);
        this.totalCards = this.cards.length;

        if (this.totalCards === 0) return;

        this.updateCardsPerView();
        this.createDots();
        this.updateCarousel();
        this.setupEventListeners();

        window.addEventListener('resize', () => this.updateCardsPerView());
      }

      updateCardsPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.cardsPerView = 1;
        } else if (width <= 989) {
          this.cardsPerView = 2;
        } else {
          this.cardsPerView = {{ block.settings.cards_per_view_number }};
        }
        this.maxIndex = Math.max(0, this.totalCards - this.cardsPerView);
        this.updateCarousel();
      }

      createDots() {
        if (!this.dotsContainer) return;
        this.dotsContainer.innerHTML = '';
        
        const numDots = Math.ceil(this.totalCards / this.cardsPerView);
        for (let i = 0; i < numDots; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-mood-carousel-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i * this.cardsPerView));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex = Math.max(0, this.currentIndex - this.cardsPerView);
          this.updateCarousel();
        }
      }

      next() {
        if (this.currentIndex < this.maxIndex) {
          this.currentIndex = Math.min(this.maxIndex, this.currentIndex + this.cardsPerView);
          this.updateCarousel();
        }
      }

      goToSlide(index) {
        this.currentIndex = Math.min(index, this.maxIndex);
        this.updateCarousel();
      }

      updateCarousel() {
        if (!this.track) return;

        const cardWidth = this.cards[0]?.offsetWidth || 0;
        const gap = {{ block.settings.card_gap }};
        const offset = -(this.currentIndex * (cardWidth + gap));
        
        this.track.style.transform = `translateX(${offset}px)`;

        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }
        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex >= this.maxIndex;
        }

        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;
        const dots = this.dotsContainer.querySelectorAll('.ai-mood-carousel-dot-{{ ai_gen_id }}');
        const activeDotIndex = Math.floor(this.currentIndex / this.cardsPerView);
        
        dots.forEach((dot, index) => {
          if (index === activeDotIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    customElements.define('mood-carousel-{{ ai_gen_id }}', MoodCarousel{{ ai_gen_id }});
  })();
</script>

