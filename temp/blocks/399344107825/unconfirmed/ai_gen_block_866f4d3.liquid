{% doc %}
  @prompt
    want a feature collection, seems like every product as a card having price written below it, with compared price and the percent off on it, it should be scrollable and have title, 
    the design should be modern, and has some animation is it, the section should have option to add video and image in the background
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-featured-collection__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ai-featured-collection__background-media-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-collection__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-featured-collection__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    padding: {{ block.settings.section_padding }}px 20px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: 40px;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-featured-collection__scroll-container-{{ ai_gen_id }} {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
  }

  .ai-featured-collection__scroll-container-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-featured-collection__scroll-container-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-featured-collection__scroll-container-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-featured-collection__grid-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    padding-bottom: 20px;
  }

  .ai-featured-collection__card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.card_width }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-collection__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-featured-collection__card-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-featured-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-featured-collection__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-featured-collection__card-{{ ai_gen_id }}:hover .ai-featured-collection__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-collection__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 12px;
    font-weight: 700;
    z-index: 2;
    animation: ai-badge-pulse-{{ ai_gen_id }} 2s ease-in-out infinite;
  }

  @keyframes ai-badge-pulse-{{ ai_gen_id }} {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .ai-featured-collection__card-info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-featured-collection__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .ai-featured-collection__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
  }

  .ai-featured-collection__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-featured-collection__discount-badge-{{ ai_gen_id }} {
    background-color: {{ block.settings.discount_badge_background }};
    color: {{ block.settings.discount_badge_text }};
    padding: 4px 8px;
    border-radius: {{ block.settings.discount_badge_radius }}px;
    font-size: 12px;
    font-weight: 700;
  }

  .ai-featured-collection__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-featured-collection__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.title_color }};
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} p {
    font-size: 16px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-featured-collection__card-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.card_width | times: 0.8 }}px;
    }

    .ai-featured-collection__content-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }} class="ai-featured-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collection__background-{{ ai_gen_id }}">
    {% if block.settings.background_video != blank %}
      <video
        class="ai-featured-collection__background-media-{{ ai_gen_id }}"
        autoplay
        muted
        loop
        playsinline
      >
        <source src="{{ block.settings.background_video }}" type="video/mp4">
      </video>
    {% elsif block.settings.background_image != blank %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        class="ai-featured-collection__background-media-{{ ai_gen_id }}"
        loading="lazy"
      >
    {% endif %}
    <div class="ai-featured-collection__overlay-{{ ai_gen_id }}"></div>
  </div>

  <div class="ai-featured-collection__content-{{ ai_gen_id }}">
    {% if block.settings.collection_title != blank %}
      <div class="ai-featured-collection__header-{{ ai_gen_id }}">
        <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">{{ block.settings.collection_title }}</h2>
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-featured-collection__scroll-container-{{ ai_gen_id }}">
        <div class="ai-featured-collection__grid-{{ ai_gen_id }}">
          {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
            <div class="ai-featured-collection__card-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-featured-collection__card-link-{{ ai_gen_id }}">
                <div class="ai-featured-collection__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-featured-collection__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="750"
                    >
                  {% else %}
                    <div class="ai-featured-collection__placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}

                  {% if product.compare_at_price > product.price %}
                    {% assign discount = product.compare_at_price | minus: product.price %}
                    {% assign discount_percent = discount | times: 100.0 | divided_by: product.compare_at_price | round %}
                    <div class="ai-featured-collection__badge-{{ ai_gen_id }}">
                      -{{ discount_percent }}%
                    </div>
                  {% endif %}
                </div>

                <div class="ai-featured-collection__card-info-{{ ai_gen_id }}">
                  <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                  <div class="ai-featured-collection__price-wrapper-{{ ai_gen_id }}">
                    <span class="ai-featured-collection__price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>

                    {% if product.compare_at_price > product.price %}
                      <span class="ai-featured-collection__compare-price-{{ ai_gen_id }}">
                        {{ product.compare_at_price | money }}
                      </span>
                      {% assign discount = product.compare_at_price | minus: product.price %}
                      {% assign discount_percent = discount | times: 100.0 | divided_by: product.compare_at_price | round %}
                      <span class="ai-featured-collection__discount-badge-{{ ai_gen_id }}">
                        SAVE {{ discount_percent }}%
                      </span>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
        <p>Select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.scrollContainer = this.querySelector('.ai-featured-collection__scroll-container-{{ ai_gen_id }}');
        if (this.scrollContainer) {
          this.setupScrollBehavior();
        }
      }

      setupScrollBehavior() {
        let isDown = false;
        let startX;
        let scrollLeft;

        this.scrollContainer.addEventListener('mousedown', (e) => {
          isDown = true;
          this.scrollContainer.style.cursor = 'grabbing';
          startX = e.pageX - this.scrollContainer.offsetLeft;
          scrollLeft = this.scrollContainer.scrollLeft;
        });

        this.scrollContainer.addEventListener('mouseleave', () => {
          isDown = false;
          this.scrollContainer.style.cursor = 'grab';
        });

        this.scrollContainer.addEventListener('mouseup', () => {
          isDown = false;
          this.scrollContainer.style.cursor = 'grab';
        });

        this.scrollContainer.addEventListener('mousemove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - this.scrollContainer.offsetLeft;
          const walk = (x - startX) * 2;
          this.scrollContainer.scrollLeft = scrollLeft - walk;
        });
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

