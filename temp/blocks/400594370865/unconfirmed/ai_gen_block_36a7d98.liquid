{% doc %}
  @prompt
    split showcase, perfect for mobile and desktop, tiny in size, with animation, something new
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
  }

  .ai-split-showcase__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: {{ block.settings.min_height }}px;
    position: relative;
  }

  .ai-split-showcase__panel-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    transition: transform 0.4s ease;
  }

  .ai-split-showcase__panel-{{ ai_gen_id }}:hover {
    transform: scale(1.02);
    z-index: 2;
  }

  .ai-split-showcase__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-split-showcase__panel-{{ ai_gen_id }}:hover .ai-split-showcase__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-split-showcase__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    transition: opacity 0.4s ease;
  }

  .ai-split-showcase__panel-{{ ai_gen_id }}:hover .ai-split-showcase__overlay-{{ ai_gen_id }} {
    opacity: {{ block.settings.overlay_hover_opacity }};
  }

  .ai-split-showcase__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    text-align: center;
    color: {{ block.settings.text_color }};
  }

  .ai-split-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-split-showcase__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0 0 20px;
    opacity: 0.9;
  }

  .ai-split-showcase__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 28px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_border_color }};
  }

  .ai-split-showcase__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-split-showcase__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-split-showcase__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-split-showcase__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .ai-split-showcase__panel-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_min_height }}px;
      padding: 30px 20px;
    }

    .ai-split-showcase__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-split-showcase__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<split-showcase-{{ ai_gen_id }} class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-showcase__container-{{ ai_gen_id }}">
    <div class="ai-split-showcase__panel-{{ ai_gen_id }} ai-split-showcase__panel-left-{{ ai_gen_id }}">
      {% if block.settings.left_image %}
        <img
          src="{{ block.settings.left_image | image_url: width: 1200 }}"
          alt="{{ block.settings.left_image.alt | escape }}"
          class="ai-split-showcase__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.left_image.width }}"
          height="{{ block.settings.left_image.height }}"
        >
      {% else %}
        <div class="ai-split-showcase__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-split-showcase__overlay-{{ ai_gen_id }}"></div>
      <div class="ai-split-showcase__content-{{ ai_gen_id }}">
        {% if block.settings.left_title != blank %}
          <h3 class="ai-split-showcase__title-{{ ai_gen_id }}">{{ block.settings.left_title }}</h3>
        {% endif %}
        {% if block.settings.left_subtitle != blank %}
          <p class="ai-split-showcase__subtitle-{{ ai_gen_id }}">{{ block.settings.left_subtitle }}</p>
        {% endif %}
        {% if block.settings.left_button_text != blank %}
          <a href="{{ block.settings.left_button_link }}" class="ai-split-showcase__button-{{ ai_gen_id }}">
            {{ block.settings.left_button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="ai-split-showcase__panel-{{ ai_gen_id }} ai-split-showcase__panel-right-{{ ai_gen_id }}">
      {% if block.settings.right_image %}
        <img
          src="{{ block.settings.right_image | image_url: width: 1200 }}"
          alt="{{ block.settings.right_image.alt | escape }}"
          class="ai-split-showcase__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.right_image.width }}"
          height="{{ block.settings.right_image.height }}"
        >
      {% else %}
        <div class="ai-split-showcase__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-split-showcase__overlay-{{ ai_gen_id }}"></div>
      <div class="ai-split-showcase__content-{{ ai_gen_id }}">
        {% if block.settings.right_title != blank %}
          <h3 class="ai-split-showcase__title-{{ ai_gen_id }}">{{ block.settings.right_title }}</h3>
        {% endif %}
        {% if block.settings.right_subtitle != blank %}
          <p class="ai-split-showcase__subtitle-{{ ai_gen_id }}">{{ block.settings.right_subtitle }}</p>
        {% endif %}
        {% if block.settings.right_button_text != blank %}
          <a href="{{ block.settings.right_button_link }}" class="ai-split-showcase__button-{{ ai_gen_id }}">
            {{ block.settings.right_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</split-showcase-{{ ai_gen_id }}>

<script>
  (function() {
    class SplitShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('split-showcase-{{ ai_gen_id }}', SplitShowcase{{ ai_gen_id }});
  })();
</script>

