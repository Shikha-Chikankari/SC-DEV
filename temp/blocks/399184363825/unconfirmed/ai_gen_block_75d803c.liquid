{% style %}
  .ai-mood-carousel-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    display: block;
  }

  .ai-mood-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-mood-carousel__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    text-transform: {{ block.settings.title_case }};
  }

  .ai-mood-carousel__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-mood-carousel__container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    padding: 0 50px;
  }

  .ai-mood-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    transition: transform 0.5s ease;
  }

  .ai-mood-carousel__card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.card_gap | times: 2 }}px) / 3);
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    display: block;
  }

  .ai-mood-carousel__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-mood-carousel__card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-mood-carousel__card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mood-carousel__card-image-wrapper-{{ ai_gen_id }} svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-mood-carousel__card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
    display: flex;
    align-items: flex-end;
    padding: 20px;
  }

  .ai-mood-carousel__card-mood-{{ ai_gen_id }} {
    color: #ffffff;
    font-size: {{ block.settings.mood_text_size }}px;
    font-weight: 600;
    margin: 0;
    text-transform: {{ block.settings.mood_text_case }};
  }

  .ai-mood-carousel__card-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-mood-carousel__card-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0 0 12px;
    line-height: 1.5;
  }

  .ai-mood-carousel__card-cta-{{ ai_gen_id }} {
    color: {{ block.settings.cta_color }};
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .ai-mood-carousel__card-cta-{{ ai_gen_id }}:hover {
    color: {{ block.settings.cta_hover_color }};
  }

  .ai-mood-carousel__nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.nav_button_background }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
    z-index: 2;
  }

  .ai-mood-carousel__nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_background }};
  }

  .ai-mood-carousel__nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-mood-carousel__nav--prev-{{ ai_gen_id }} {
    left: 0;
  }

  .ai-mood-carousel__nav--next-{{ ai_gen_id }} {
    right: 0;
  }

  .ai-mood-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 30px;
  }

  .ai-mood-carousel__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .ai-mood-carousel__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    transform: scale(1.2);
  }

  @media screen and (max-width: 989px) {
    .ai-mood-carousel__card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.card_gap }}px) / 2);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-mood-carousel__container-{{ ai_gen_id }} {
