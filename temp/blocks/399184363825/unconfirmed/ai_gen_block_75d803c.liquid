    }
  }
{% endstyle %}

<mood-carousel-{{ ai_gen_id }}
  class="ai-mood-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-mood-carousel__header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-mood-carousel__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}
    {% if block.settings.subtitle != blank %}
      <p class="ai-mood-carousel__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-mood-carousel__container-{{ ai_gen_id }}">
    <button
      class="ai-mood-carousel__nav-{{ ai_gen_id }} ai-mood-carousel__nav--prev-{{ ai_gen_id }}"
      aria-label="Previous"
      data-nav="prev"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>

    <div class="ai-mood-carousel__track-{{ ai_gen_id }}" data-track>
      {% for i in (1..6) %}
        {% liquid
          assign mood_enabled_key = 'mood_' | append: i | append: '_enabled'
          assign mood_name_key = 'mood_' | append: i | append: '_name'
          assign mood_description_key = 'mood_' | append: i | append: '_description'
          assign mood_image_key = 'mood_' | append: i | append: '_image'
          assign mood_collection_key = 'mood_' | append: i | append: '_collection'

          assign mood_enabled = block.settings[mood_enabled_key]
          assign mood_name = block.settings[mood_name_key]
          assign mood_description = block.settings[mood_description_key]
          assign mood_image = block.settings[mood_image_key]
          assign mood_collection = block.settings[mood_collection_key]
        %}

        {% if mood_enabled %}
          {% if mood_collection != blank %}
            <a
              href="{{ mood_collection.url }}"
              class="ai-mood-carousel__card-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-mood-carousel__card-{{ ai_gen_id }}">
          {% endif %}
            <div class="ai-mood-carousel__card-image-wrapper-{{ ai_gen_id }}">
              {% if mood_image %}
                <img
                  src="{{ mood_image | image_url: width: 600 }}"
                  alt="{{ mood_name | escape }}"
                  class="ai-mood-carousel__card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                {{ 'collection-apparel-1' | placeholder_svg_tag }}
              {% endif %}
              <div class="ai-mood-carousel__card-overlay-{{ ai_gen_id }}">
                <h3 class="ai-mood-carousel__card-mood-{{ ai_gen_id }}">{{ mood_name }}</h3>
              </div>
            </div>
            <div class="ai-mood-carousel__card-content-{{ ai_gen_id }}">
              {% if mood_description != blank %}
                <p class="ai-mood-carousel__card-description-{{ ai_gen_id }}">{{ mood_description }}</p>
              {% endif %}
              {% if mood_collection != blank %}
                <span class="ai-mood-carousel__card-cta-{{ ai_gen_id }}">
                  {{ block.settings.cta_text }}
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </span>
              {% endif %}
            </div>
          {% if mood_collection != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <button
      class="ai-mood-carousel__nav-{{ ai_gen_id }} ai-mood-carousel__nav--next-{{ ai_gen_id }}"
      aria-label="Next"
      data-nav="next"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>
  </div>

  <div class="ai-mood-carousel__dots-{{ ai_gen_id }}" data-dots></div>
</mood-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class MoodCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.itemsPerView = 3;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.cards = Array.from(this.track.children);
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');
        this.dotsContainer = this.querySelector('[data-dots]');

        this.updateItemsPerView();
        this.createDots();
        this.setupEventListeners();
        this.updateCarousel();

        window.addEventListener('resize', () => {
          this.updateItemsPerView();
          this.createDots();
          this.updateCarousel();
        });
      }

      updateItemsPerView() {
        if (window.innerWidth <= 749) {
          this.itemsPerView = 1;
        } else if (window.innerWidth <= 989) {
          this.itemsPerView = 2;
        } else {
          this.itemsPerView = 3;
        }
      }

      createDots() {
        this.dotsContainer.innerHTML = '';
        const totalDots = Math.ceil(this.cards.length / this.itemsPerView);

        for (let i = 0; i < totalDots; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-mood-carousel__dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', 'Go to slide ' + (i + 1));
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }

        this.dots = Array.from(this.dotsContainer.children);
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.prev());
        this.nextButton.addEventListener('click', () => this.next());
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateCarousel();
        }
      }

      next() {
        const maxIndex = Math.ceil(this.cards.length / this.itemsPerView) - 1;
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updateCarousel();
        }
      }

      goToSlide(index) {
        this.currentIndex = index;
        this.updateCarousel();
      }

      updateCarousel() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = -(this.currentIndex * this.itemsPerView * (cardWidth + gap));

        this.track.style.transform = 'translateX(' + offset + 'px)';

        const maxIndex = Math.ceil(this.cards.length / this.itemsPerView) - 1;
        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex === maxIndex;

        this.dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    customElements.define('mood-carousel-{{ ai_gen_id }}', MoodCarousel{{ ai_gen_id }});
  })();
</script>

