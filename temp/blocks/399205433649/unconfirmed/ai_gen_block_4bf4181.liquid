{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mood-carousel-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    display: block;
  }

  .ai-mood-carousel-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-mood-carousel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-mood-carousel-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin-top: 8px;
  }

  .ai-mood-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-mood-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    transition: transform 0.5s ease;
    padding: 4px;
  }

  .ai-mood-card-{{ ai_gen_id }} {
    {% if block.settings.cards_per_view == 1 %}
      flex: 0 0 calc(100% - {{ block.settings.card_gap }}px);
    {% elsif block.settings.cards_per_view == 2 %}
      flex: 0 0 calc(50% - {{ block.settings.card_gap }}px);
    {% elsif block.settings.cards_per_view == 3 %}
      flex: 0 0 calc(33.333% - {{ block.settings.card_gap }}px);
    {% else %}
      flex: 0 0 calc(25% - {{ block.settings.card_gap }}px);
    {% endif %}
    min-width: 280px;
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }

  .ai-mood-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-mood-card-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-mood-card-background-{{ ai_gen_id }} img,
  .ai-mood-card-background-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-mood-card-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, {{ block.settings.placeholder_gradient_start }} 0%, {{ block.settings.placeholder_gradient_end }} 100%);
  }

  .ai-mood-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 2;
  }

  .ai-mood-card-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: {{ block.settings.card_padding }}px;
    height: {{ block.settings.card_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_align }};
    align-items: {{ block.settings.content_horizontal_align }};
    text-align: {{ block.settings.content_text_align }};
  }

  .ai-mood-card-mood-{{ ai_gen_id }} {
    font-size: {{ block.settings.mood_label_size }}px;
    color: {{ block.settings.mood_label_color }};
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-mood-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px 0;
    font-weight: 700;
  }

  .ai-mood-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    margin-bottom: 20px;
    line-height: 1.5;
  }

  .ai-mood-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-mood-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-mood-carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background-color: {{ block.settings.nav_bg_color }};
    color: {{ block.settings.nav_icon_color }};
    border: none;
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .ai-mood-carousel-nav-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_hover_bg_color }};
    color: {{ block.settings.nav_hover_icon_color }};
  }

  .ai-mood-carousel-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-mood-carousel-nav-prev-{{ ai_gen_id }} {
    left: -{{ block.settings.nav_button_size | divided_by: 2 }}px;
  }

  .ai-mood-carousel-nav-next-{{ ai_gen_id }} {
    right: -{{ block.settings.nav_button_size | divided_by: 2 }}px;
  }

  .ai-mood-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 24px;
  }

  .ai-mood-carousel-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .ai-mood-carousel-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
    width: 24px;
    border-radius: 5px;
  }

  @media screen and (max-width: 749px) {
    .ai-mood-card-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - {{ block.settings.card_gap }}px);
    }

    .ai-mood-carousel-nav-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-mood-carousel-nav-next-{{ ai_gen_id }} {
      right: 10px;
    }

    .ai-mood-card-content-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<mood-carousel-{{ ai_gen_id }}
  class="ai-mood-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.section_heading != blank or block.settings.section_subheading != blank %}
    <div class="ai-mood-carousel-header-{{ ai_gen_id }}">
      {% if block.settings.section_heading != blank %}
        <h2 class="ai-mood-carousel-title-{{ ai_gen_id }}">{{ block.settings.section_heading }}</h2>
      {% endif %}
      {% if block.settings.section_subheading != blank %}
        <p class="ai-mood-carousel-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-mood-carousel-wrapper-{{ ai_gen_id }}">
    {% if block.settings.show_navigation %}
      <button
        class="ai-mood-carousel-nav-{{ ai_gen_id }} ai-mood-carousel-nav-prev-{{ ai_gen_id }}"
        aria-label="Previous"
        data-nav="prev"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
    {% endif %}

    <div class="ai-mood-carousel-track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign mood_enabled_key = 'mood_' | append: i | append: '_enabled'
          assign mood_label_key = 'mood_' | append: i | append: '_label'
          assign mood_title_key = 'mood_' | append: i | append: '_title'
          assign mood_description_key = 'mood_' | append: i | append: '_description'
          assign mood_button_text_key = 'mood_' | append: i | append: '_button_text'
          assign mood_button_link_key = 'mood_' | append: i | append: '_button_link'
          assign mood_bg_type_key = 'mood_' | append: i | append: '_bg_type'
          assign mood_bg_image_key = 'mood_' | append: i | append: '_bg_image'
          assign mood_bg_video_key = 'mood_' | append: i | append: '_bg_video'

          assign mood_enabled = block.settings[mood_enabled_key]
          assign mood_label = block.settings[mood_label_key]
          assign mood_title = block.settings[mood_title_key]
          assign mood_description = block.settings[mood_description_key]
          assign mood_button_text = block.settings[mood_button_text_key]
          assign mood_button_link = block.settings[mood_button_link_key]
          assign mood_bg_type = block.settings[mood_bg_type_key]
          assign mood_bg_image = block.settings[mood_bg_image_key]
          assign mood_bg_video = block.settings[mood_bg_video_key]
        %}

        {% if mood_enabled %}
          <div class="ai-mood-card-{{ ai_gen_id }}" data-card="{{ i }}">
            <div class="ai-mood-card-background-{{ ai_gen_id }}">
              {% if mood_bg_type == 'image' and mood_bg_image %}
                <img
                  src="{{ mood_bg_image | image_url: width: 800 }}"
                  alt="{{ mood_title | escape }}"
                  loading="lazy"
                  width="800"
                  height="600"
                >
              {% elsif mood_bg_type == 'video' and mood_bg_video %}
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                >
                  <source src="{{ mood_bg_video }}" type="video/mp4">
                </video>
              {% else %}
                <div class="ai-mood-card-background-placeholder-{{ ai_gen_id }}"></div>
              {% endif %}
            </div>

            <div class="ai-mood-card-overlay-{{ ai_gen_id }}"></div>

            <div class="ai-mood-card-content-{{ ai_gen_id }}">
              {% if mood_label != blank %}
                <div class="ai-mood-card-mood-{{ ai_gen_id }}">{{ mood_label }}</div>
              {% endif %}

              {% if mood_title != blank %}
                <h3 class="ai-mood-card-title-{{ ai_gen_id }}">{{ mood_title }}</h3>
              {% endif %}

              {% if mood_description != blank %}
                <p class="ai-mood-card-description-{{ ai_gen_id }}">{{ mood_description }}</p>
              {% endif %}

              {% if mood_button_text != blank and mood_button_link != blank %}
                <a
                  href="{{ mood_button_link }}"
                  class="ai-mood-card-button-{{ ai_gen_id }}"
                >
                  {{ mood_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_navigation %}
      <button
        class="ai-mood-carousel-nav-{{ ai_gen_id }} ai-mood-carousel-nav-next-{{ ai_gen_id }}"
        aria-label="Next"
        data-nav="next"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    {% endif %}
  </div>

  {% if block.settings.show_dots %}
    <div class="ai-mood-carousel-dots-{{ ai_gen_id }}"></div>
  {% endif %}
</mood-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class MoodCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.cardsPerView = {{ block.settings.cards_per_view }};
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-mood-carousel-track-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-mood-card-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-nav="prev"]');
        this.nextButton = this.querySelector('[data-nav="next"]');
        this.dotsContainer = this.querySelector('.ai-mood-carousel-dots-{{ ai_gen_id }}');

        if (this.cards.length === 0) return;

        this.totalCards = this.cards.length;
        this.maxIndex = Math.max(0, this.totalCards - this.cardsPerView);

        this.setupNavigation();
        this.setupDots();
        this.updateCarousel();
      }

      setupNavigation() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.navigate(-1));
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.navigate(1));
        }
      }

      setupDots() {
        if (!this.dotsContainer) return;

        const dotsCount = this.maxIndex + 1;
        for (let i = 0; i < dotsCount; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-mood-carousel-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => {
            this.currentIndex = i;
            this.updateCarousel();
          });
          this.dotsContainer.appendChild(dot);
        }
      }

      navigate(direction) {
        this.currentIndex = Math.max(0, Math.min(this.maxIndex, this.currentIndex + direction));
        this.updateCarousel();
      }

      updateCarousel() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = -(this.currentIndex * (cardWidth + gap));

        this.track.style.transform = `translateX(${offset}px)`;

        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }
        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex >= this.maxIndex;
        }

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-mood-carousel-dot-{{ ai_gen_id }}');
          dots.forEach((dot, index) => {
            if (index === this.currentIndex) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }
      }
    }

    customElements.define('mood-carousel-{{ ai_gen_id }}', MoodCarousel{{ ai_gen_id }});
  })();
</script>

