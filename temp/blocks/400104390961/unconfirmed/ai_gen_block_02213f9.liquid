  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-carousel-track-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
        assign slide_image_key = 'slide_' | append: i | append: '_image'
        assign slide_title_key = 'slide_' | append: i | append: '_title'
        assign slide_description_key = 'slide_' | append: i | append: '_description'
        assign slide_link_type_key = 'slide_' | append: i | append: '_link_type'
        assign slide_collection_key = 'slide_' | append: i | append: '_collection'
        assign slide_product_key = 'slide_' | append: i | append: '_product'
        assign slide_url_key = 'slide_' | append: i | append: '_url'

        assign slide_enabled = block.settings[slide_enabled_key]
        assign slide_image = block.settings[slide_image_key]
        assign slide_title = block.settings[slide_title_key]
        assign slide_description = block.settings[slide_description_key]
        assign slide_link_type = block.settings[slide_link_type_key]
        assign slide_collection = block.settings[slide_collection_key]
        assign slide_product = block.settings[slide_product_key]
        assign slide_url = block.settings[slide_url_key]

        assign slide_link = ''
        if slide_link_type == 'collection' and slide_collection != blank
          assign slide_link = slide_collection.url
        elsif slide_link_type == 'product' and slide_product != blank
          assign slide_link = slide_product.url
        elsif slide_link_type == 'url' and slide_url != blank
          assign slide_link = slide_url
        endif
      %}

      {% if slide_enabled %}
        <div class="ai-carousel-slide-{{ ai_gen_id }}" data-slide-index="{{ forloop.index0 }}">
          {% if slide_link != blank %}
            <a href="{{ slide_link }}" class="ai-carousel-slide-link-{{ ai_gen_id }}">
          {% else %}
            <div class="ai-carousel-slide-link-{{ ai_gen_id }}">
          {% endif %}

            {% if slide_image %}
              <img
                src="{{ slide_image | image_url: width: 2000 }}"
                alt="{{ slide_image.alt | escape }}"
                loading="lazy"
                width="{{ slide_image.width }}"
                height="{{ slide_image.height }}"
                class="ai-carousel-slide-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-carousel-slide-placeholder-{{ ai_gen_id }}">
                {{ 'hero-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <div class="ai-carousel-overlay-{{ ai_gen_id }}"></div>

            {% if slide_title != blank or slide_description != blank %}
              <div class="ai-carousel-content-{{ ai_gen_id }}">
                {% if slide_title != blank %}
                  <h2 class="ai-carousel-title-{{ ai_gen_id }}">{{ slide_title }}</h2>
                {% endif %}
                {% if slide_description != blank %}
                  <p class="ai-carousel-description-{{ ai_gen_id }}">{{ slide_description }}</p>
                {% endif %}
              </div>
            {% endif %}

          {% if slide_link != blank %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if block.settings.show_arrows %}
    <div class="ai-carousel-arrows-{{ ai_gen_id }}">
      <button class="ai-carousel-arrow-{{ ai_gen_id }} ai-carousel-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
          <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="ai-carousel-arrow-{{ ai_gen_id }} ai-carousel-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
          <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
