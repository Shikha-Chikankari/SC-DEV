{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-carousel-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
  }

  .ai-carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: block;
  }

  .ai-carousel-slide-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    cursor: pointer;
  }

  .ai-carousel-slide-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-carousel-slide-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-carousel-slide-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-carousel-content-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: {{ block.settings.text_color }};
    width: 90%;
    max-width: 800px;
    z-index: 2;
  }

  .ai-carousel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .ai-carousel-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .ai-carousel-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-carousel-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: 24px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 3;
  }

  .ai-carousel-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-carousel-dot-{{ ai_gen_id }}:hover {
    opacity: 0.8;
    transform: scale(1.1);
  }

  .ai-carousel-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-carousel-arrows-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 24px;
    z-index: 3;
    pointer-events: none;
  }

  .ai-carousel-arrow-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.arrow_background }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
    pointer-events: auto;
  }

  .ai-carousel-arrow-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    background-color: {{ block.settings.arrow_hover_background }};
  }

  .ai-carousel-arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
    stroke: {{ block.settings.arrow_color }};
    stroke-width: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-carousel-slide-image-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-carousel-slide-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }

    .ai-carousel-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.6 }}px;
    }

    .ai-carousel-description-{{ ai_gen_id }} {
