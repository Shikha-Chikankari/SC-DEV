{% doc %}
  @prompt
    a feature collection, have every product like a card, of 600*800 size, border radius 24px, showing price, compared price and percent off on it, the style should be modern and has some animation, the section should have option to add the repeated video and image in the background
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-featured-collection-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
  }

  .ai-featured-collection-background-{{ ai_gen_id }} img,
  .ai-featured-collection-background-{{ ai_gen_id }} video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ block.settings.background_opacity | divided_by: 100.0 }};
  }

  .ai-featured-collection-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-featured-collection-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collection-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-featured-collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    text-transform: {{ block.settings.heading_text_transform }};
  }

  .ai-featured-collection-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-featured-collection-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: {{ block.settings.card_shadow_x | times: 1.5 }}px {{ block.settings.card_shadow_y | times: 1.5 }}px {{ block.settings.card_shadow_blur | times: 1.5 }}px {{ block.settings.card_shadow_color }};
  }

  .ai-product-card-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 133.33%;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-card-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-card-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    right: 16px;
    background: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 16px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: 14px;
    font-weight: 700;
    z-index: 2;
  }

  .ai-product-card-info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-product-card-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
  }

  .ai-product-card-compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-card-discount-{{ ai_gen_id }} {
    background: {{ block.settings.discount_background }};
    color: {{ block.settings.discount_text_color }};
    padding: 4px 10px;
    border-radius: {{ block.settings.discount_border_radius }}px;
    font-size: 13px;
    font-weight: 700;
  }

  .ai-product-card-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-product-card-empty-{{ ai_gen_id }} h3 {
    font-size: 20px;
    margin: 0 0 12px;
  }

  .ai-product-card-empty-{{ ai_gen_id }} p {
    font-size: 14px;
    margin: 0;
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }} class="ai-featured-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.background_type == 'image' and block.settings.background_image %}
    <div class="ai-featured-collection-background-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
      >
    </div>
  {% elsif block.settings.background_type == 'video' and block.settings.background_video %}
    <div class="ai-featured-collection-background-{{ ai_gen_id }}">
      <video
        autoplay
        loop
        muted
        playsinline
      >
        <source src="{{ block.settings.background_video }}" type="video/mp4">
      </video>
    </div>
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-featured-collection-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-featured-collection-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-featured-collection-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collection-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-featured-collection-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-featured-collection-grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-product-card-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-product-card-link-{{ ai_gen_id }}">
              <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 800 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-card-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="800"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  {% assign discount_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                  <div class="ai-product-card-badge-{{ ai_gen_id }}">
                    -{{ discount_percent }}%
                  </div>
                {% endif %}
              </div>

              <div class="ai-product-card-info-{{ ai_gen_id }}">
                <h3 class="ai-product-card-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                <div class="ai-product-card-price-wrapper-{{ ai_gen_id }}">
                  <span class="ai-product-card-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </span>

                  {% if product.compare_at_price > product.price %}
                    <span class="ai-product-card-compare-price-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>

                    {% assign discount_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                    <span class="ai-product-card-discount-{{ ai_gen_id }}">
                      Save {{ discount_percent }}%
                    </span>
                  {% endif %}
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-product-card-empty-{{ ai_gen_id }}">
        <h3>No collection selected</h3>
        <p>Please select a collection to display products</p>
      </div>
    {% endif %}
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.style.display = 'block';
      }

      connectedCallback() {
        this.setupVideoBackground();
      }

      setupVideoBackground() {
        const video = this.querySelector('video');
        if (video) {
          video.play().catch(function(error) {
            console.log('Video autoplay failed:', error);
          });
        }
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

